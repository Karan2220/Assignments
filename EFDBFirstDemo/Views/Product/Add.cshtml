@model EFDBFirstDemo.Models.Product

@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Add Product</h2>

<form action="@Url.Action("Create","Product")" method="post">
    <div class="form-row">
        <div class="col-md-6">
            <label for="ProductID">ProductId</label>
            <input type="text" value="" name="ProductID"  class="form-control"/>
        </div>
        <div class="col-md-6">
            <label for="">ProductName</label>
            <input type="text" value="" name="ProductName" class="form-control" />
        </div>
    </div>
    <div class="form-row">
        <div class="col-md-6">
            <label for="Price">Price</label>
            <input type="text" value="" name="Price" class="form-control" />
        </div>
        <div class="col-md-6">
            <label for="DateOfPurchase">DateOfPurchase</label>
            <input type="date" value="" name="DateOfPurchase" class="form-control" />
        </div>
    </div>
    <div class="form-row">
        <div class="col-md-6">
            <label for="AvailabilityStatus">AvailabilityStatus</label>
            <input type="text" value="" name="AvailabilityStatus" class="form-control" />
        </div>
        <div class="col-md-6">
            <label for="CategoryID">CategoryID</label>
            <input type="text" value="" name="CategoryID" class="form-control" />
        </div>
    </div>
    <div class="form-row">
        <div class="col-md-6">
            <label for="BrandID">BrandID</label>
            <input type="text" value="" name="BrandID" class="form-control" />
        </div>      
    </div>
    <div class="form-row">
        <div class="col-md-6">          
            <input type="checkbox" checked="" value="" name="Active" class="form-check" />
            <label for="Active">Active</label>
        </div>
    </div>

    <button type="submit" class="btn btn-success">Add Product</button>
    <a href="@Url.Action("Index", "Product")" class="btn btn-danger">Cancel</a>
</form>

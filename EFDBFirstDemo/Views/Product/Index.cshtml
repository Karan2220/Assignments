@model IEnumerable<EFDBFirstDemo.Models.Product>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Products List</h2>

<table class="table">
    <thead>
        <tr>
            <th>ProductID</th>
            <th>ProductName</th>
            <th>Price</th>
            <th>DateOfPurchase</th>
            <th>AvailabilityStatus</th>
            <th>Category</th>
            <th>Brand</th>
            <th>Active</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var prod in Model)
            {
                <tr>
                    <td>@prod.ProductID</td>
                    <td>@prod.ProductName</td>
                    <td>@prod.Price.Value.ToString("C")</td>
                    <td>@prod.DateOfPurchase.Value.ToString("yyyy/MM/dd")</td>
                    <td>@prod.AvailabilityStatus</td>
                    <td>@prod.CategoryID</td>
                    <td>@prod.BrandID</td>
                    <td>@prod.Active</td>
                    <td><a href="@Url.Action("Details","Product", new {id = @prod.ProductID})">Details |</a></td>
                    <td><a href="@Url.Action("Edit","Product", new {id = @prod.ProductID})">Edit |</a></td>
                    <td><a href="@Url.Action("Delete","Product", new {id = @prod.ProductID})" onclick="return confirm('Are you sure?')">Delete</a></td>
                </tr>
            }
        }
    </tbody>   
</table>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/scripts/jquery-3.4.1.js"></script>
    <script src="~/scripts/bootstrap.js"></script>
    <script src="~/scripts/popper.js"></script>
</head>
<body>
    <div class="container-fluid">
        <div>
            <nav class="navbar navbar-expand-lg navbar-dark bg-success">
                <a class="navbar-brand" href="~/Product/Index">@ViewBag.Title</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item active">
                            <a class="nav-link" href="~/Product/Index">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/Brand/Index">Brands</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/Category/Index">Categories</a>
                        </li>
                    </ul>

                    <ul class="nav navbar-nav ml-auto" >
                        <li class="nav-item">
                             <a href="@Url.Action("Add","Product")" class="btn btn-danger">Add Product</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </div>
    <div>
        @RenderBody()
    </div>
</body>
</html>
